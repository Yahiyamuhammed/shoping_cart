<section>
    
    <div class="container">
        <div class="row">
            <a href="/admin/add-product" class="btn btn-success ml-auto mt-4">add product</a>
        </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">no</th>
      <th scope="col">name</th>
      <th scope="col">category</th>
      <th scope="col">price</th>
      <th scope="col">description</th>
      <th scope="col">image</th>
    </tr>
  </thead>
  <tbody>

            {{#each products}}
    <tr>
      <th scope="row">
        1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.price}}</td>
      <td>{{this.Description}}</td>
      {{!-- <td><img style="height:50px; width:50px" src="../product-images/"{{this._id}}".jpg"></td> --}}
      <td><img style="height:50px; width:50px" src="/product-images/{{this._id}}.jpg"></td>
      <td><a class="btn btn-danger mr-1" href="/admin/delete-products?id={{this._id}}" onclick="return confirm('are you sure you want to delete{{this.Name}}')">delete</a>
      <a class="btn btn-primary" href="/admin/edit-products?id={{this._id}}">edit</a></td>

    </tr>
          {{/each}}
  </tbody>
</table>
    </div>
</section>